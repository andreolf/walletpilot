{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {}
  },
  "ui": "tui",
  "globalPassThroughEnv": ["SUPABASE_URL", "SUPABASE_SERVICE_ROLE_KEY"]
}
